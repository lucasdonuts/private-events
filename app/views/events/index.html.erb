<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column">
        <h3 class="content is-large">All Events</h3>
        <% @events.each do |event| %>
          <div class="box">
            <%= event.date %>
            <h2 class="title is-3"><%= link_to event.name, event %></h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>