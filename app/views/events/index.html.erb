<section class="section">
  <div class="container">
    <div class="columns has-text-centered">
      <div class="column">
        <h3 class="content is-large has-text-centered">Upcoming Events</h3>
        <div class="columns is-multiline is-centered">
          <% @events.upcoming.each do |event| %>
            <div class="column is-narrow">
              <div class="box has-text-centered">
                <%= event.date.strftime("%B %-d, %Y") %>
                <h2 class="title is-5"><%= link_to event.name, event %></h2>
                <small><%= link_to event.creator.username, user_path(event.creator) %></small>
              </div>
            </div>
          <% end %>
        </div>
        <h3 class="content is-large has-text-centered">Past Events</h3>
        <div class="columns is-multiline is-centered">
          <% @events.past.each do |event| %>
            <div class="column is-narrow">
              <div class="box has-text-centered">
                <%= event.date %>
                <h2 class="title is-5"><%= link_to event.name, event %></h2>
                <small><%= link_to event.creator.username, user_path(event.creator) %></small>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</section>