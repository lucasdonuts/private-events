<section class="section">
  <div class="container">
    <div class="box">
      <h2 class="title">
        <%= @event.name %>
      </h2>
      <p class="control">
        <%= @event.date %>
      </p>
      <p>
        <%= @event.description %>
      </p>
      <ul>
      <% @event.attendees.each do |a| %>
        <li><%= a.name %></li>
      <% end %>
      </ul>
    </div>
  </div>
</section>