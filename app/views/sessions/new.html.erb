<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-4 is-offset-4">
        <%= form_with url: sessions_path, local: true do |f| %>
          <div class="field">
            <div class="control">
              <%= f.label :username, class: "label" %>
              <%= f.text_field :username, class: "input", autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control has-text-centered">
              <%= f.submit "Log In", class: "button is-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

