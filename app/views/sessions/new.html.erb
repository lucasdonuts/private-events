<%= form_with url: sessions_path, local: true do |f| %>
  <div class="field">
    <div class="control">
      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, class: "input", autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Log In", class: "button is-info is-fullwidth" %>
    </div>
  </div>
<% end %>