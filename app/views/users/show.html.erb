<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h3 class="content is-large has-text-centered"><%= @user.username %>'s Created Events</h3>
        <div class="columns is-multilined is-centered">
          <% @user.created_events.each do |event| %>
            <div class="column is-narrow">
              <div class="box has-text-centered">
                <small><%= event.date.strftime("%B %-d, %Y") %></small>
                <h2 class="title is-5"><%= link_to event.name, event %></h2>
              </div>
            </div>
          <% end %>
        </div>
        <h3 class="content is-large has-text-centered"><%= @user.username %>'s Upcoming Events</h3>
        <div class="columns is-multilined is-centered">
          <% @user.attended_events.upcoming.each do |event| %>
              <div class="column is-narrow">
                <div class="box has-text-centered">
                  <small><%= event.date.strftime("%B %-d, %Y") %></small>
                  <h2 class="title is-5"><%= link_to event.name, event %></h2>
                </div>
              </div>
          <% end %>
        </div>
        <h3 class="content is-large has-text-centered"><%= @user.username %>'s Past Events</h3>
        <div class="columns is-multilined is-centered">
          <% @user.attended_events.past.each do |event| %>
              <div class="column is-narrow">
                <div class="box has-text-centered">
                  <small><%= event.date.strftime("%B %-d, %Y") %></small>
                  <h2 class="title is-5"><%= link_to event.name, event %></h2>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>